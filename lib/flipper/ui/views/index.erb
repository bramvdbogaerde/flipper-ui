<% @features.each do |feature| %>
  <div class="feature">
    <h3><span class="state <%= state_class feature %>"></span><%= titleize feature.name %></h3>

    <div class="description">
      <%=h feature.description %>
    </div>

    <div class="actions">
      <a href="#">Change Settings</a>
    </div>
  </div>
<% end %>
